{
    "name": "Django CRUD Development Container",
    "dockerComposeFile": [
        "./docker-compose.yml"
    ],
    "service": "web",
    "workspaceFolder": "/app",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "extensions": [
        "ms-python.python",
        "batisteo.vscode-django",
        "ms-azuretools.vscode-docker"
    ],
    "forwardPorts": [
        8000
    ],
    "postCreateCommand": "python manage.py migrate"
}